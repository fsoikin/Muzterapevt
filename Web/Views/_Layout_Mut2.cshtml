@{
	Layout = "~/Views/_Layout.cshtml";
	LayoutModel model = ViewBag.LayoutModel;
}

@section Top {
	@Html.Partial( "~/Views/TopMenu.cshtml", model.SecondTopMenu )
	<div class="bannerwrapper">
		<div class="banner" title="Muzterapevt.RU">
			@Html.Partial( "~/Views/Text.cshtml", model.TopRight )
		</div>
		<div class="bannerb">
			<a class="logo" href="@Url.Content("~/")"><img src="@Url.Content( "~/Content/img/logo.png" )" /></a>
		</div>
	</div>
}
@section LeftSidebar {
	@RenderSection( "LeftSidebar", false )
}
@section Footer {
	@Html.Partial( "~/Views/_Footer.cshtml", new FooterModel { Layout = ViewBag.LayoutModel, SiteName = "Музтерапевт.Ру" } )
}

@RenderBody()